{
  "name": "@app-upgrade/manager",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "deploy:qa": "yarn deploy:qa:functions && yarn deploy:qa:hosting",
    "deploy:qa:functions": "firebase deploy --project=qa --only functions",
    "deploy:qa:hosting": "yarn build-web:qa && firebase deploy --project=qa --only hosting",
    "deploy:production": "yarn deploy:production:functions && yarn deploy:production:hosting",
    "deploy:production:functions": "firebase deploy --project=production --only functions",
    "deploy:production:hosting": "yarn build-web:production && firebase deploy --project=production --only hosting",
    "build-web:qa": "yarn --cwd app-upgrade-client build:qa && rm -rf dist && cp -r app-upgrade-client/build dist",
    "build-web:production": "yarn --cwd app-upgrade-client build:production && rm -rf dist && cp -r app-upgrade-client/build dist",
    "clean": "source .bin/clean.sh",
    "build": "source .bin/build.sh",
    "start": "yarn --cwd app-upgrade-client start",
    "watch-common": "yarn --cwd common watch"
  },
  "workspaces": [
    "app-upgrade-client",
    "common",
    "functions",
    "scripts"
  ]
}
